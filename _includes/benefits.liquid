<div class="card-item col">
    <div class="card hoverable">
      <div class="row g-0">
        {% if project.img %}
          <div class="card-img col-md-6">
            {% include figure.liquid loading="eager" path=project.img sizes="(min-width: 800px) 156px, 50vw" alt="project thumbnail" %}
          </div>
        {% endif %}
        <div class="{% if project.img %}col-md-6{% else %}col-md-12{% endif %}">
          <div class="card-body" style="padding: 0.5rem 1rem 0 1rem;">
            <h3 class="card-title" style="margin-top: auto;">{{ project.title }}</h3>
            <p class="card-text">{{ project.description }}</p>
            <div class="row ml-1 mr-1 p-0">
            </div>
          </div>
        </div>
      </div>
    </div>
</div>

